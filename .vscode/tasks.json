{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BUILD CODE",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "main.c",
                "gcode_decoder.c",
                "location_list.c",
                "-o",
                "output.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "RUN CODE",
            "type": "shell",
            "command": "output.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
